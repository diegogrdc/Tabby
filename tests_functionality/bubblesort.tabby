Program bubbleSort;

Var Arr Int arr[104];
Var Int n, i, j, aux, swaps;
Var Bool isSorted;

Fn Int mod(Int x, Int m) {
    Return x - ((x / m) * m);
}

Fn Int rndInRange(Int x) {
    Return mod(RandInt(), x);
}

Fn Int positive(Int x) {
    If(x < 0) {
        Return x * -1;
    } Else {
        Return x;
    }
}

Fn Void genArr() {
    i = 0;
    For(i < n; i = i + 1) {
        arr[i] = positive(rndInRange(40));
    }
}

Fn Void printArr() {
    i = 0;
    Write("[ ");
    For(i < n - 1; i = i + 1) {
        Write(arr[i], ", ");
    }
    Write(arr[i], " ]\n");
}

Fn Void bubbleSortArr() {
    isSorted = False;
    While(isSorted != True) {
        isSorted = True;
        i = 0;
        For(i < n; i = i + 1) {
            j = i + 1;
            For(j < n; j = j + 1) {
                If(arr[i] > arr[j]) {
                    aux = arr[i];
                    arr[i] = arr[j];
                    arr[j] = aux;
                    isSorted = False;
                    swaps = swaps + 1;
                }
            }
        }
    }
}

Tabby() {
    Write("\n", "Ingrese N:", "\n");
    Read(n);
    genArr();
    Write("Initial Arr is:\n");
    printArr();
    bubbleSortArr();
    Write("Sorted Arr is:\n");
    printArr();
    Write("Used ", swaps, " swaps\n");
}